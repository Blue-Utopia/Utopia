{
  "name": "decentralized-freelance-marketplace",
  "version": "1.0.0",
  "description": "A trustless, crypto-powered freelance platform",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd contracts && npm install && cd ../backend && npm install && cd ../frontend && npm install",
    "dev:contracts": "cd contracts && npx hardhat node",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:contracts": "cd contracts && npx hardhat compile",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:backend": "cd backend && npm test",
    "deploy:local": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "cd contracts && npx hardhat run scripts/deploy.js --network sepolia",
    "prisma:generate": "cd backend && npm run prisma:generate",
    "prisma:migrate": "cd backend && npm run prisma:migrate",
    "prisma:push": "cd backend && npm run prisma:push",
    "prisma:studio": "cd backend && npm run prisma:studio",
    "prisma:setup": "cd backend && npm run prisma:setup"
  },
  "keywords": [
    "blockchain",
    "freelance",
    "web3",
    "defi",
    "marketplace"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "contracts",
    "backend",
    "frontend"
  ]
}

